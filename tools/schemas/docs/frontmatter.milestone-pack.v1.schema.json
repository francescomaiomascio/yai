{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "frontmatter.milestone-pack.v1",
  "type": "object",
  "required": ["id", "status", "runbook", "phase", "adrs", "spec_anchors", "issues"],
  "properties": {
    "id": {"type": "string", "pattern": "^MP-"},
    "status": {"type": "string", "enum": ["draft", "active", "closed", "deprecated", "superseded"]},
    "closed_at": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "closure_issue": {"type": "string", "minLength": 1},
    "runbook": {"type": "string", "pattern": "^docs/runbooks/.*\\.md$"},
    "phase": {"type": "string", "minLength": 1},
    "adrs": {"type": "array", "minItems": 1, "items": {"type": "string", "pattern": "^docs/design/adr/ADR-.*\\.md$"}},
    "spec_anchors": {"type": "array", "minItems": 1, "items": {"type": "string", "pattern": "^deps/yai-specs/"}},
    "issues": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 1}}
  }
}
